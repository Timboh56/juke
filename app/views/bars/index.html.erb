<h1>Listing bars</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>Street</th>
    <th>City</th>
    <th>State</th>
    <th>Country</th>
    <th>Url</th>
    <th>Opening</th>
    <th>Closing</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bars.each do |bar| %>
  <tr>
    <td><%= bar.name %></td>
    <td><%= bar.latitude %></td>
    <td><%= bar.longitude %></td>
    <td><%= bar.street %></td>
    <td><%= bar.city %></td>
    <td><%= bar.state %></td>
    <td><%= bar.country %></td>
    <td><%= bar.url %></td>
    <td><%= bar.opening %></td>
    <td><%= bar.closing %></td>
    <td><%= link_to 'Show', bar %></td>
    <td><%= link_to 'Edit', edit_bar_path(bar) %></td>
    <td><%= link_to 'Destroy', bar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

