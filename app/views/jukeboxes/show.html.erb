<%= content_for_block("show_jukebox","jplayer_process") %>

<input type="hidden" class="user_id" data-user-id="<%= current_user.id %>" />
<div class="jukebox_header" id="<%= @jukebox.id %>">
	<%= jukebox_title_div(@jukebox, @favorite) %>

<div class="jquery_jplayer">
	
</div>

<%= jplayer(@jukebox) %>
<%= location(@jukebox) %>

<div class="middle">
	<div class="playlist">
		<h1> The Playlist </h1>	
		<br>
		<div class="playlist_table">
			<%= playlist(@songs) %>
		</div>
	</div>
	<br>
	<%= search_song(@jukebox) %>
</div>

<%= jukebox_chat %>

<p>
  <b>Opening time:</b>
  <%= @jukebox.opening %>
  
  <b>Closing time:</b>
  <%= @jukebox.closing %>
</p>

<div class="bottom">
	<%= object_links_bottom(@jukebox) %>
</div>
