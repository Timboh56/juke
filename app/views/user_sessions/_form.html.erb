<%= render :partial => "layouts/error_messages", :locals => {:target => @user_session} %>

<%= form_for @user_session do |f| %>
  <div class="field">
		<%= f.label :username %><br />
    <%= f.text_field :username, :placeholder => "Username", :class => "form-control", :size => "10" %>
  </div>
  <div class="field">
		<%= f.label :password %><br />
    <%= f.password_field :password, :placeholder => "Password", :class => "form-control" , :size => "10" %>
  </div>
	<div class="actions">
    <%= f.submit "Login", :class => "btn btn-success"%>
	</div>
<% end %>
