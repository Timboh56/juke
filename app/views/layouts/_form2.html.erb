<%= form_for @user_session, :html => { :class => "adjust navbar-form navbar-right" } do |f| %>
  <div class="form-group">
    <%= f.text_field :username, :placeholder => "Email", :class => "form-control", :size => "10" %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, :placeholder => "Password", :class => "form-control" , :size => "10" %>
  </div>
  <%= f.submit "Login", :class => "btn btn-success"%>
<% end %>
