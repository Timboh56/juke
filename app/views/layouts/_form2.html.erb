<%= form_for @user_session, :html => { :class => "adjust navbar-form navbar-right" } do |f| %>
  <div class="form-group">
    <%= f.text_field :username, :placeholder => "Username", :class => "form-control", :size => "10" %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, :placeholder => "Password", :class => "form-control" , :size => "10" %>
  </div>
  <%= f.submit "Login", :class => "btn btn-success"%>
	<%= link_to image_tag("/images/facebook-icon.png", :class => "icon"), "/auth/facebook", :id => "facebook_sign_in" %>
	
<% end %>
