<div class="users_index">
	<% if @users %>
	  <%= render partial: "admin_panel", locals: { :users => @users } %>
	<% else %>
	<h1> Welcome <%= current_user.username %>. We're so glad you're here. </h1>
	<div class="user_pane">
		<h1> Email: </h1> <% @user.email %>
		<h1> Username: </h1> <% @user.username %>
		
		<%= link_to "Edit My Profile", edit_user_path(@user.id), :class => "btn btn-default" %>
		
	  <%= link_to "Find a jukebox", "jukeboxes", :class => "btn btn-large btn-primary" %>
		
	<% end %>
</div>